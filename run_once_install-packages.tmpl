#!/bin/sh
{{ if eq .chezmoi.osRelease.id "arch" -}}
pacman -Q ripgrep fd fzf exa fish yarn || sudo pacman -S ripgrep fd fzf exa fish bat yarn
{{ end -}}

{{ if eq .chezmoi.osRelease.id "manjaro" -}}
pacman -Q ripgrep fd fzf exa fish yarn || sudo pacman -S ripgrep fd fzf exa fish bat yarn
{{ end -}}

{{ if eq .chezmoi.osRelease.id "fedora" -}}
sudo dnf install ripgrep fd-find fzf exa fish npm bat
npm install -g yarn
{{ end -}}

{{ if eq .chezmoi.osRelease.id "ubuntu" -}} or {{eq .chezmoi.osRelease.id "debian" -}}
sudo apt-get install fd-find \
|| $(curl -LO https://github.com/sharkdp/fd/releases/download/v8.0.0/fd-musl_8.0.0_amd64.deb && sudo dpkg -i fd-musl_8.0.0_amd64.deb && rm fd-musl_8.0.0_amd64.deb)
sudo apt-get install ripgrep \
|| $(curl -LO https://github.com/BurntSushi/ripgrep/releases/download/11.0.2/ripgrep_11.0.2_amd64.deb && sudo dpkg -i ripgrep_11.0.2_amd64.deb && rm ripgrep_11.0.2_amd64.deb)
sudo apt-get install bat \
|| $(curl -LO https://github.com/sharkdp/bat/releases/download/v0.13.0/bat_0.13.0_amd64.deb && sudo dg -i bat_0.13.0_amd64.deb && rm bat_0.13.0_amd64.deb)
sudo apt install fish npm
sudo apt install fzf
npm install -g yarn
{{ end -}}
